<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#F8F8F8"
    tools:context="com.mcuhq.simplebluetooth.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="14"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="10">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="7"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:src="@mipmap/avt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="."
                        android:textSize="4sp" />

                    <TextView
                        android:id="@+id/texthi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="   Good morning"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="  Jun"
                        android:textColor="#000000"
                        android:textSize="20sp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:layout_weight="3"
                android:weightSum="10"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBox_notifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Notification" />

                <ImageView
                    android:id="@+id/iv_bell"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:src="@mipmap/bell" />



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="40"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#E27C7C"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_weight="20"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textBPM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f03a7d"
                        android:layout_gravity="center_horizontal"
                        android:text="75"
                        android:textSize="80sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20sp"
                        android:textColor="#f078a5"
                        android:text="   BPM" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_heart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@mipmap/heart" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="vertical">

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/buttonFile"
                    android:layout_width="250dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:background="@mipmap/write"
                    android:textColor="#EE3B78"
                    android:text="Save     " />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="11"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/button_on"
                        android:layout_width="180dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/bton"
                        android:textColor="#FFFF"
                        android:text="On         " />

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/button_pair"
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/btpair"
                        android:textColor="#FFFF"
                        android:textSize="12sp"
                        android:text="Paired               " />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/button_off"
                        android:layout_width="180dp"
                        android:layout_height="20dp"
                        android:textSize="15sp"
                        android:background="@mipmap/btoff"
                        android:textColor="#FFFF"
                        android:text="      of" />

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/button_seek"
                        android:layout_width="180dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/btseek"
                        android:textSize="15sp"
                        android:textColor="#FFFF"
                        android:text="            Find" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:weightSum="20"
            android:background="#F1B7B7"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />

            <ListView
                android:id="@+id/listview_device"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="16" />

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
